event clicked;long ll_ot,ll_row,ll_cantidad,ll_etiquetas,ll_indice,ll_total
string ls_articulo,ls_calidad,ls_caja,ls_pallet,ls_lote,ls_etiqueta,ls_sel
int    li_calibre,li_piezascaja,li_cajaspallet 
datastore ds_datos
int  li_anyo_pedido,li_pedido,li_linea_pedido
string tono_cliente,pedido_cliente,ls_etiqueta_de
int calibre_cliente 

ll_row = w_planificacion_tencer_promocion.dw_1.getrow()

if ll_row > 0 then
	
	ll_ot = w_planificacion_tencer_promocion.dw_1.object.ot[ll_row]
	
	ls_articulo = w_planificacion_tencer_promocion.dw_1.object.cod_articulo[ll_row]
	ls_calidad  = "1"
	
	ls_caja   = w_planificacion_tencer_promocion.dw_1.object.cod_caja[ll_row]
	ls_pallet = w_planificacion_tencer_promocion.dw_1.object.cod_pallet[ll_row]
		
	SELECT isnull(almartcajas.caja,''),   
			 isnull(almartcajas.piezascaja,0), 
			 isnull(palarticulo.cajaspallet,0) 
	INTO   :ls_caja,
			 :li_piezascaja,
			 :li_cajaspallet 
	FROM   almartcajas,   
			 palarticulo  
	WHERE ( almartcajas.empresa  = palarticulo.empresa ) 
	AND   ( almartcajas.articulo = palarticulo.articulo ) 
	AND   ( almartcajas.caja     = palarticulo.caja ) 
	AND ( ( almartcajas.empresa  = :codigo_empresa ) 
	AND   ( almartcajas.articulo = :ls_articulo ) 
	AND   ( almartcajas.caja     = :ls_caja ) 
	AND   ( palarticulo.codigo   = :ls_pallet ) );
	
	
	li_anyo_pedido 	= w_planificacion_tencer_promocion.dw_1.object.planificacion_anyo[ll_row]
	li_pedido 			= w_planificacion_tencer_promocion.dw_1.object.pedido[ll_row]
	li_linea_pedido 	= w_planificacion_tencer_promocion.dw_1.object.linped[ll_row]

	select venliped.tono_imprimir, venliped.calibre_imprimir, venped.numpedcli
	into :tono_cliente, :calibre_cliente, :pedido_cliente
	from venliped 
	inner join venped on venliped.empresa = venped.empresa and venliped.anyo = venped.anyo and venliped.pedido = venped.pedido
	where venliped.empresa = :codigo_empresa
	and venliped.anyo = :li_anyo_pedido
	and venliped.pedido = :li_pedido
	and venliped.linea = :li_linea_pedido;

	ls_lote      			= w_planificacion_tencer_promocion.dw_1.object.planificacion_lote[ll_row]
	li_calibre   			= w_planificacion_tencer_promocion.dw_1.object.planificacion_calibre[ll_row]
	ll_cantidad  		= w_planificacion_tencer_promocion.dw_1.object.planificacion_cantidad[ll_row]
				
	ls_sel = "select isnull(articulos_etiqueta.etiqueta,'') as etiqueta "+&
				"from   articulos_etiqueta, "+&
				"		  almetiquetas "+&
				"where  articulos_etiqueta.empresa  = almetiquetas.empresa "+&
				"and    articulos_etiqueta.etiqueta = almetiquetas.codigo "+&
				"and    articulos_etiqueta.empresa  = '"+codigo_empresa+"' "+&
				"and    articulos_etiqueta.articulo = '"+ls_articulo+"' "+&
				"order by case when almetiquetas.etiqueta_de = 'PI' then 1 else case when almetiquetas.etiqueta_de = 'CA' then 2 else 3 end end"
	
	ll_total = f_cargar_cursor_transaccion(sqlca,ds_datos,ls_sel)
	
	for ll_indice = 1 to ll_total
	
		ls_etiqueta = ds_datos.object.etiqueta[ll_indice]
	
		select isnull(almetiquetas.etiqueta_de,'')
		into   :ls_etiqueta_de
		from   almetiquetas
		where  almetiquetas.empresa = :codigo_empresa 
		and    almetiquetas.codigo  = :ls_etiqueta;
	
		choose case ls_etiqueta_de
			case 'PI'
				//Piezas
				ll_etiquetas = ll_cantidad				
			case 'CA'
				//Cajas
				if li_piezascaja <> 0 and not isnull(li_piezascaja) then
					ll_etiquetas = round(ll_cantidad / li_piezascaja,0) +1
				end if				
			case 'PA'
				//Pallets			
				if li_piezascaja <> 0 and not isnull(li_piezascaja) then
					ll_etiquetas = round((ll_cantidad / li_piezascaja) / li_cajaspallet ,0) +1
				end if								
			case else
				//No contemplado
				ll_etiquetas = 1
		end choose
		
		//Añadimos un 12% de mas
		ll_etiquetas = round(ll_etiquetas * 1.12,0) +1			
	
		//f_imprimir_etiqueta_labeljoy(ls_articulo,ls_calidad,ls_lote,li_calibre,ls_caja,ls_etiqueta,ll_etiquetas)
		f_imprimir_etiqueta_labeljoy(ls_articulo,ls_calidad,ls_lote,li_calibre,ls_pallet,ls_caja,ls_etiqueta,ll_etiquetas, tono_cliente, calibre_cliente, pedido_cliente)
		if ll_indice < ll_total then
			messagebox("Siguiente etiqueta","Acepte cuando se haya realizado la impresión de la etiqueta actual para abrir la impresión de la etiqueta siguiente.")
		end if
	next
	
	destroy ds_datos
//	if open(w_impresion_etiquetas_ean128) = 1 then
//		w_impresion_etiquetas_ean128.il_ot = ll_ot
//		w_impresion_etiquetas_ean128.f_datos_ot()
//	end if

else
	messagebox("¡Atención!","Debe marcar la ot de la que quiere imprimir las etiquetas.")
end if
end event

