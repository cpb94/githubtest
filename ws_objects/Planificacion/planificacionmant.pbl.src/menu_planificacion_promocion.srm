		v_pedido = 0
		v_linped = 0
		v_anyo = 0
		tipo_unidad = '0'  //PIEZAS
		ancho = 0
		largo = 0
		v_cantidad = lineas_pedido.object.cantidad[i]
		
		/*
		  
		if tipo_unidad = '1' then
