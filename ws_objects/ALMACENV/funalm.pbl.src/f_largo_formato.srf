global function decimal f_largo_formato (string ai_codemp, string ai_codfor);Dec{4} var

  SELECT formatos.largo 
    INTO :var
    FROM formatos  
   WHERE ( formatos.empresa = :ai_codemp ) AND  
         ( formatos.codigo  = :ai_codfor )
    USING SQLCA;

RETURN var
end function

