global function string f_usuarios_v_email (string usuario);String variable

  SELECT usuarios.v_email 
    INTO :variable  
    FROM usuarios  
   WHERE usuarios.v_usuario = :usuario   ;
	
	if isnull(variable) then variable = ""

	Return variable

end function

