global function string f_nombre_idioma2 (string cod_idioma);String nombre
  SELECT idiomas.texto 
    INTO :nombre  
    FROM idiomas  
   WHERE idiomas.idioma = :cod_idioma  Using SQLCA;
  IF SQLCA.SQLCode<>0 THEN 
     nombre=""
  END IF
  If IsNull(nombre) Then nombre = ""
  Return nombre

end function

